{{>adminNavbar}}
<section class=" admin-section d-flex gap-5">
    {{>adminSideBar}}
    <div class="vw-100 main px-5 pt-5 content-admin justify-content-center">
        <div class=" container-fluid p-5 my-5 box-shadow">
            <div class="container px-5 py-3  border-primary">
                <h2>Customers Details</h2>
                <table class="table table-hover">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th class="px-2" scope="col">ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Block</th>

                        </tr>
                    </thead>
                    {{#each usersData}}
                    <tbody>
                        <tr>
                            <td class="px-2">{{_id}}</td>
                            <td>{{name}}</td>
                            <td>{{email}}</td>
                            
                            <td class=" d-flex justify-content-center">
                                <a role="button" data-bs-toggle="modal" data-bs-target="#staticBackdrop"><span
                                        class="material-icons-sharp">block</span>
                                </a >
                            </td>


                        </tr>
                 {{!-- href="/admin/blockuser/{{this._id}}" --}}

<div class="modal fade " id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class=" d-flex justify-content-center align-items-center modal-dialog-centered">
    <div class="modal-dialog bg-success">
    <div class="modal-content p-4">
      <div class="modal-header p-2">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">Block User</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body p-3">
                <p>are you sure ? block customer with email {{this.email}} </p>
      </div>
      <div class="modal-footer p-2">
        <button type="button" class="btn btn-secondary  p-2" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger mx-4 px-4 p-2">Block</button>
      </div>
    </div>
  </div>
  </div>
</div>

                        
                    </tbody>
                    {{/each}}
                </table>
            </div>


        </div>
    </div>

</section>
