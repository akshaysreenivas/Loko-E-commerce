{{>adminNavbar}}
<section class=" admin-section d-flex gap-5">
    {{>adminSideBar}}
    <div class="vw-100 main px-5 pt-5 content-admin justify-content-center">
<form action="/admin/editproduct" method="post" class="d-dlex justify-contents-center box-shadow p-5 mb-5" >
    <fieldset class="px-5">

        <!-- Form Name -->
    
        <legend>EDIT PRODUCT</legend>
        <input type="text" class="d-none" name="productId" value="{{tobeupdate._id}}">
        <div class="container d-flex align-items-center ">
            <!-- PRODUCT NAME -->

            <div class="form-group mb-4 m-3 px-3 p-2">
                <label class="col-md-4 control-label mb-3" for="product_name">PRODUCT
                    NAME</label>

                <input type="text" id="email" name="name" value="{{tobeupdate.name}}"
                    class="form-control form-control-lg px-3" style="width: 100%;border-radius:25px" required />
            
            </div>

            <!-- PRODUCT PRICE -->

            <div class="form-group mb-4 m-3 px-3 p-2">
                <label class="col-md-4 control-label mb-3" for="product_name">PRODUCT
                    PRICE</label>

                <input type="number" id="email" name="price" value="{{tobeupdate.price}}"
                    class="form-control form-control-lg px-3" style="width: 100%;border-radius:25px" required />
            </div>
        </div>
        <div class="container d-flex align-items-center">
            <!-- PRODUCT CATEGORY -->

            <div class="form-group mb-4 m-3 px-3 p-2">
                <label class="col-md-4 control-label mb-3" for="product_name">PRODUCT
                    CATEGORY</label>
                <select class="form-select form-control-lg px-3" style="width: 100%;"
                    aria-label="product category select "  name="category" required>
                    <option value="{{tobeupdate.category}}" selected>{{tobeupdate.category}}</option>
                    <option value="Kurta">Kurta</option>
                    <option value="Jeans">Jeans</option>
                    <option value="Shirts">Shirts</option>
                    <option value="Pants">Pants</option>
                    <option value="other">other</option>
                </select>
            </div>

            <!-- PRODUCT QUANTITY -->

            <div class="form-group mb-4 m-3 px-3 p-2">
                <label class="col-md-4 control-label mb-3" for="available_quantity">AVAILABLE QUANTITY</label>
                <input id="available_quantity" name="quantity" value="{{tobeupdate.quantity}}"
                    class="form-control form-control-lg px-3" style="width: 100%;border-radius:25px" required=""
                    type="number" />
            </div>
        </div>
       

        <!-- Textarea -->
        <div class="form-group mb-4 m-3 px-3 p-2">
            <label class="col-md-4 control-label mb-3" for="product_description">PRODUCT DESCRIPTION</label>
            <textarea class="form-control form-control-lg p-2"  style="width: 50%;border-radius:5px"
                id="product_description" name="description">{{tobeupdate.product_description}}</textarea>

        </div>

        <!-- Button -->

        <div class="form-group mb-4 m-3 px-3 p-2">
            <button class="p-1" type="submit" style="width: 50%;border-radius:25px;">+
                EDIT PRODUCT</button>
        </div>

    </fieldset>
</form>
    </div>

</section>
