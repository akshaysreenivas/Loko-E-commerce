{{>userNavbar}}

<div class="container mt-5 py-5">
    <div class="row py-5">
        {{>userSidebar}}
        <div class="col-lg-9 my-lg-0 my-1">
            <div id="main-content" class="bg-white border">
                <div class="d-flex flex-column">
                    <div class="text-uppercase">My Orders</div>
                    {{#if allOrders }}
                    {{#each allOrders}}
                    <div class="order my-3 bg-light">
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="d-flex flex-column justify-content-between order-summary">
                                    <div class="d-flex align-items-center">
                                        <div class="text-uppercase">Order ID : #{{truncate this._id 8}}</div>
                                        <div class="blue-label ms-auto text-uppercase">{{paymentStatus}}</div>
                                    </div>
                                    <div class="fs-8">Products #03</div>
                                    <div class="fs-8">{{orderOn}}</div>
                                    <div class="rating d-flex align-items-center pt-1">
                                        <span class="material-icons-sharp">thumb_up</span>
                                        <span class="px-2">Rating:</span>
                                    </div>
                                </div>

                            </div>
                            <div class="col-lg-8">
                                <div class="d-sm-flex align-items-sm-start justify-content-sm-between">
                                    <div class="status">Status : {{currentStatus.status}}</div>
                                    <div class="btn btn-primary text-uppercase">order info</div>
                                </div>
                                <div class="progressbar-track">
                                    <ul class="progressbar">
                                        <li id="step-1" class="text-muted green">
                                            <span class="material-icons-sharp">redeem</span>
                                        </li>
                                        <li id="step-2" class="text-muted green">
                                            <span class="material-icons-sharp">check</span>
                                        </li>
                                        <li id="step-3" class="text-muted green">
                                            <span class="material-icons-sharp">inventory_2</span>
                                        </li>
                                        <li id="step-4" class="text-muted green">
                                            <span class="material-icons-sharp">local_shipping</span>
                                        </li>
                                        <li id="step-5" class="text-muted green">
                                            <span class="material-icons-sharp">all_inbox</span>
                                        </li>
                                    </ul>
                                    <div id="tracker"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each }}
                    {{else}}
                    <div class="text-secondary">
                        No Orders Yet
                    </div>
                    {{/if}}

                </div>
            </div>
        </div>

    </div>