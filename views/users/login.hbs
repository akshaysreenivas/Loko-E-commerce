<link rel="stylesheet" href="/stylesheets/userLogin.css" />


<section class="container-fluid form-section  d-flex align-items-center justify-content-center">
  <div class="container ">
    <div class="row ">
      <div class="col-lg-10 col-md-12 login-box">
        <div class="row">
          <div class="col-lg-6 col-md-6 log-det">
            <div class="d-flex align-items-center gap-md-4">

              <img height="30px" src="/images/favicon.jpg" alt="">
              <h3 class="text-center">User Login</h3>
            </div>

            <p class="my-3">Log in to access exclusive discounts, order tracking, and a convenient wishlist feature.</p>
            <form class="text-box-cont" action="/login" method="post" id="loginForm">
              <div class="input-group">
                <div class="input-group-prepend">
                  <label for="userEmail">
                    <span class="input-group-text" id="basic-addon1"><span class="material-icons-sharp">
                        email
                      </span></span>
                  </label>
                </div>
                <input type="email" onblur="javascript:value=value.replace(/\s/g,'');" id="userEmail" name="email"
                  class="form-control" placeholder="Email Address" aria-label="email address">
              </div>
              <small id="emailerr" class="text-danger"></small>


              <div class="input-group mt-4 position-relative">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="basic-addon1"><span class="material-icons-sharp">
                      key
                    </span></span>
                </div>
                <span class="material-icons-sharp align-self-end  toggle-password" id="eye" onclick="togglePassword()">
                </span>
                <input type="password" id="userPassword" class="form-control" name="password" placeholder="Password"
                  aria-label="Password" onclick="showeye()">

              </div>
              <small id="passwordErr" class="text-danger"></small>

              <div class="input-group center mt-4">
                <button class="btn  btn-dark align btn-round" id="login_btn" type="submit">
                  <span class="login_submit" id="login_submit">CLICK TO LOGIN</span>
                  <span class="spinner-border m-auto text-white p-2 spinner-border-sm" id="spinner_login"
                    style="display:none;" role="status">
                  </span>
                </button>
              </div>

            </form>
            <div class="form-outline mb-2">
              <h6 class="text-danger text-center">{{message}}</h6>
            </div>
          </div>

          <div class="col-lg-6 col-md-6 box-de">
            <div class="inn-cover">
              <div class="ditk-inf">
                <h2 class="w-100">Don't Have an Account </h2>
                <p>Join our fashion community by signing up today! Enjoy exclusive perks like member-only discounts,
                  faster checkout for seamless shopping Elevate your fashion journey â€“ sign up now and step
                  into a world of possibilities!</p>

                <a href="/signup">
                  <button type="button" class="btn button">SIGN UP</button>
                </a>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


<script>
  let password = document.getElementById("userPassword");
  let eye = document.getElementById("eye");
  function showeye() {
    eye.innerHTML = "visibility_off"
  }

  function togglePassword() {
    if (password.type === "password") {
      password.type = "text";
      eye.innerHTML = "visibility"

    } else {
      eye.innerHTML = "visibility_off"
      password.type = "password";
    }
  }
</script>
</body>

</html>