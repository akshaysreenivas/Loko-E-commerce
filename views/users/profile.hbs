                </div>
                <h4 class="mb-3">Edit Profile</h4>
                <!---------edit name ----->
                <form id="changeName">
                    <div class="mb-3 row">
                        <div class="d-flex align-items-center gap-3 mb-2 col-lg-12">
                            <label class="form-label" for="name">Your Name</label>
                            <button id="toggleButton" type="button" class="text-primary h6 border-0">Edit</button>
                        </div>
                        <div class="d-flex align-items-center gap-3 mb-2 col-lg-6">

                            <input type="text" id="myInputname" value="{{user.name}}" name="name"
                                class=" form-control rounded p-2" placeholder="{{user.name}}" readonly />
                            <button id="nameSubmitButton" class="btn btn-outline-dark"
                                style="display:none">Save</button>
                        </div>
                    </div>
                </form>

                <!--------edit email-------->
                <form id="changeEmail">
                    <div class="mb-3 row">
                        <div class="d-flex align-items-center gap-3 mb-2 col-lg-12">
                            <label class="form-label" for="name">Your Email Address</label>
                            <button id="toggleBtn" type="button" class="text-primary h6 border-0">Edit</button>
                        </div>
                        <div class="d-flex align-items-center gap-3 mb-2 col-lg-6">

                            <input type="text" id="myInputemail" value="{{user.email}}" name="email"
                                class="form-control rounded p-2" placeholder="" readonly />
                            <button id="emailSubmitButton" class="btn btn-outline-dark"
                                style="display:none">Save</button>
                        </div>
                    </div>


                </form>
                <!------Change Password---->
                <div class="mb-3 row">
                    <form id="changePassword">
                        <button type="submit" id="btn_submit" class="text-primary h6 border-0">Change Password ?</button>
                        <div class="spinner-border text-primary" id="spinner_password" style="display:none" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </form>
                </div>


