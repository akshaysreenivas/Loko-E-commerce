{{>userNavbar}}

<div class="container mt-5 py-5">
    <div class="row py-5">
        {{>userSidebar}}
        <div class="col-lg-9 my-lg-0 my-1">
            <div id="main-content" class="bg-white border">
                <div class="d-flex flex-column">
                    <div class="h5">Hello {{user.name}},</div>
                    <div>Logged in as: {{user.email}}</div>
                </div>
                <div class="d-flex my-4 flex-wrap">
                    <a class="box me-4 my-1 bg-light text-decoration-none cursor-pointer">
                        <img src="/images/cardboard-box.png"
                            alt="">
                        <div class="d-flex align-items-center mt-2">
                            <div class="tag">Orders placed</div>
                            <div class="ms-auto number">{{order.no}}</div>
                        </div>
                    </a>
                    <a class="box me-4 my-1 bg-light text-decoration-none cursor-pointer" href="/cart">
                        <img src="/images/shopping-cart.png"
                            alt="">
                        <div class="d-flex align-items-center mt-2">
                            <div class="tag">Items in Cart</div>
                            <div class="ms-auto number">{{cart.no}}</div>
                        </div>
                    </a>
                    <a class="box me-4 my-1 bg-light text-decoration-none cursor-pointer">
                        <img src="/images/wishlist.png"
                            alt="">
                        <div class="d-flex align-items-center mt-2">
                            <div class="tag">Wishlist</div>
                            <div class="ms-auto number">{{wishlist.no}}</div>
                        </div>
                    </a>
                </div>
                <div class="text-uppercase">My recent orders</div>
                <div class="order my-3 bg-light">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="d-flex flex-column justify-content-between order-summary">
                                <div class="d-flex align-items-center">
                                    <div class="text-uppercase">Order ID : #{{order._id}}</div>
                                    <div class="blue-label ms-auto text-uppercase">paid</div>
                                </div>
                                <div class="fs-8">Products #03</div>
                                <div class="fs-8">22 August, 2020 | 12:05 PM</div>
                                <div class="rating d-flex align-items-center pt-1">
                                    <span class="material-icons-sharp">thumb_up</span>
                                    <span class="px-2">Rating:</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <div class="d-sm-flex align-items-sm-start justify-content-sm-between">
                                <div class="status">Status : {{order.status}}</div>
                                <div class="btn btn-primary text-uppercase">order info</div>
                            </div>
                            <div class="progressbar-track">
                                <ul class="progressbar">
                                    <li id="step-1" class="text-muted green">
                                        <span class="material-icons-sharp">redeem</span>
                                    </li>
                                    <li id="step-2" class="text-muted green">
                                        <span class="material-icons-sharp">check</span>
                                    </li>
                                    <li id="step-3" class="text-muted green">
                                        <span class="material-icons-sharp">inventory_2</span>
                                    </li>
                                    <li id="step-4" class="text-muted green">
                                        <span class="material-icons-sharp">local_shipping</span>
                                    </li>
                                    <li id="step-5" class="text-muted green">
                                        <span class="material-icons-sharp">all_inbox</span>
                                    </li>
                                </ul>
                                <div id="tracker"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>