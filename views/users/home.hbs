<section class="contents py-5 ">

  <div class=" px-5">

    <div class="d-flex justify-content-center align-items-center mt-5"> <button class="btn btn-dark">OUR
        CATEGORIES</button> </div>
    <div class="d-flex justify-content-center mt-3"> <span class="text text-center">Finding Best Products Now<br> in
        Your
        Fingertips</span> </div>
    <div class="row mt-2 g-4 ">
      {{#each Categorys}}
      <div class="col-md-3 ">
        <a class="card p-1 box-shadow text-decoration-none text-dark" href="/categories/{{_id}}">
          <div class="d-flex justify-content-between align-items-center p-2">
            <div class="flex-column lh-1 imagename"> <span>{{title}}</span></div>
            <div> <img src="/images/{{image}}" height="100" width="100" /> </div>
          </div>
        </a>
      </div>
      {{/each}}

    </div>
  </div>

  <div class="container mt-4">
    <h1>New Arrivals</h1>
    <div class="row">
      {{#each productsData}}
      <div class="col-lg-3 col-sm-6 mb-4 p-3">
        <div class=" d-flex flex-column align-items-center justify-content-center rounded product-item p-3  border"
          style=" box-shadow: rgba(0, 0, 0, 0.1) 0px 10px 50px; background-color: #f7f3f399;">
          <div class="product rounded">
            <img src="/images/{{image}}" alt="">
            <ul class="d-flex align-items-center justify-content-center list-unstyled icons">
              <li class="icon "><span class="material-icons-sharp">favorite_border </span></li>
              <a href="/product/{{this._id}}" class="text-dark text-decoration-none">
                <li class="icon mx-2"> <span class="material-icons-sharp">zoom_out_map</span></li>
              </a>
              <li class="icon"><span onclick="addToCart('{{this._id}}')"
                  class="material-icons-sharp">shopping_bag</span>
              </li>
            </ul>
          </div>
          <div class="title pt-4 pb-1">{{truncate name 18}}</div>
          <div class="d-flex align-content-center justify-content-center">

          </div>
          <div class="price">â‚¹ {{price}}</div>
        </div>
      </div>
      {{/each}}




    </div>
  </div>
</section>