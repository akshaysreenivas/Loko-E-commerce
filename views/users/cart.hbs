{{>userNavbar}}



{{#if cartProducts}}
<section class="contents py-2 px-5">
    <div class="container py-4">
        <div class="row d-flex justify-content-center my-4">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h5 class="mb-0 ">Cart - {{totalItems}} items</h5>

                    </div>
                    <!-- Single item -->
                    {{#each cartProducts }}
                    <div class="card-body p-5">
                        <div class="row card-body border rounded" id="single-cart-item{{productId}}">
                            <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                                <!-- Image -->
                                <div class="bg-image hover-overlay hover-zoom ripple rounded "
                                    data-mdb-ripple-color="light">
                                    <img src="/images/product-images/{{productId}}.jpg" class="w-100 img-fluid"
                                        style="max-width: 10rem; max-height:12rem;" />
                                    <a href="#!">
                                        <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                                    </a>
                                </div>
                                <!-- Image -->
                            </div>


                            <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                                <!-- Data -->
                                <p><strong>{{product.name}}</strong></p>
                                <p> <small> {{product.category}} </small> </p>
                                <p class="text-start ">
                                    <strong>₹ <span id="price{{product._id}}">{{amount}}</span> </strong>
                                </p>
                                <p>Size: {{product.size}}</p>
                                <div class="d-flex">
                                    <button type="button" class="btn btn-danger btn-sm mb-2 d-flex gap-1"
                                        data-mdb-toggle="tooltip" title="Move to the wish list">
                                        <span class="material-icons-sharp">
                                            favorite_border
                                        </span> Move to Wishlist </button>

                                </div>
                            </div>


                            <div class="col-lg-4 col-md-6 mb-4 mb-lg-0 d-flex mb-4  justify-content-center  ">
                                <!-- Quantity -->

                                <div class="d-flex mb-4 align-items-center justify-content-center "
                                    style="max-width: 300px ">

                                    <button class="btn p-0 reduce-item-quantity{{productId}} "
                                        onclick="decCount('{{productId}}',-1)">
                                        <span class="material-icons-sharp">remove</span>
                                    </button>

                                    <div class=" w-50 p-2 ">
                                        <input id="{{productId}}" min="1" name="quantity" value="{{quantity}}"
                                            type="number" class="form-control" />
                                    </div>

                                    <button class="btn  p-0" onclick="addCount('{{productId}}',1)">
                                        <span class="material-icons-sharp">add</span>
                                    </button>

                                </div>
                                <button onclick="deleteCartProduct('{{productId}}')" class="btn align-self-start p-0">
                                    <span class="material-icons-sharp text-secondary">
                                        delete
                                    </span>
                                </button>
                            </div>
                        </div>


                    </div>
                    {{/each}}
                </div>
                <div class="card mb-4">
                    <div class="card-body">
                        <p><strong>Expected shipping delivery</strong></p>
                        <p class="mb-0">5.1.2023 - 7.1.2023</p>
                    </div>
                </div>
                <div class="card mb-4 mb-lg-0">
                    <div class="card-body">
                        <p><strong>We accept</strong></p>
                        <img class="me-2" width="45px"
                            src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/visa.svg"
                            alt="Visa" />
                        <img class="me-2" width="45px"
                            src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/amex.svg"
                            alt="American Express" />
                        <img class="me-2" width="45px"
                            src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/mastercard.svg"
                            alt="Mastercard" />

                    </div>
                </div>
            </div>
            <div class="col-md-4 position-sticky top-5">
                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h5 class="mb-0">Summary</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li
                                class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                Products
                                <span> ₹ <span class="totalcost">{{totalCost}}</span></span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                Shipping
                                <span>Free</span>
                            </li>
                            <li
                                class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                <div>
                                    <strong>Total amount</strong>
                                    <strong>
                                        <p class="mb-0">(including GST)</p>
                                    </strong>
                                </div>
                                <strong> ₹ <span class="totalcost"> {{totalCost}}</span></strong>
                            </li>
                        </ul>

                        <a type="button"
                            class="btn btn-dark  py-1 d-flex gap-3 align-items-center justify-content-center">
                            <span class="material-icons-sharp">shopping_cart_checkout</span>
                            Proceed to checkout
                        </a>


                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{{else}}

<section class="page-wrap vh-100 d-flex flex-row align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 text-center">
                <span class="display-1 d-block">
                    <h1 class="  material-icons-sharp text-dark">shopping_cart</h1>
                    Your Cart
                </span>
                <div class="mb-4 lead">Looks like your cart is empty</div>
                <div class="mb-4">

                    <a href="/" class="btn btn-dark   text-white m-auto d-flex gap-1" style="max-width: 15rem;">
                        <span class="material-icons-sharp">keyboard_backspace</span>
                        Continue shopping</a>
                </div>
            </div>
        </div>
</section>
{{/if}}